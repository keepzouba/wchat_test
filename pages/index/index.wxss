.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.upcoming{
    width: 100%;
    height: 0;
    border-bottom: 2rpx solid #a8a8a8;
    display: flex;
    justify-content: center;
    margin-bottom: 60rpx;
}
.upcoming>view{
    width: 130rpx;
    height: 40rpx;
    margin-top: -20rpx;
    border-radius: 10rpx;
    font-size: 20rpx;
    line-height: 40rpx;
    text-align: center;
    color: #eee;
    background-color: #a7a7a7;
}
