/* pages/component/film_nowplaying/film_nowplaying.wxss */
.now_film{
  width: 100%;
}
.now_film_item{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: dashed 2rpx #c9c9c9;
}
.now_film_item_content{
  width: 100%;
  height: 168rpx;
  display: flex;
}
.now_film_item_img{
  height: 100%;
  width: 120rpx;
  transition: all 1.2s ease; 
  opacity: 1;
}
.now_film_item_text{
  height: 100%;
  width: 492rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.now_film_item_text_row2,.now_film_item_text_row1,.now_film_item_text_row3{
  flex:1 1 auto;
  width: 100%;
  display: flex;
  align-items: center;
}
.now_film_item_text_name{
    flex:10 1 auto;
    font-size: 32rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: flex;
    align-items: center;
}
.now_film_item_text_sorce{
  font-size: 32rpx;
  color: #fc7103;
  flex:1 1 auto;
}
.now_film_item_text_desc{
    color: #8e8e8e;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
}
.now_film_item_text_cinemacount,.now_film_item_text_watchcount{
    color: #8e8e8e;
    font-size: 24rpx;
}
.now_film_item_text_watchcount{
  margin-left: 50rpx;
}