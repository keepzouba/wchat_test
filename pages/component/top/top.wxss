.top{
  width: 100%;
  height: 100rpx;
  background: #282828;
  position: fixed;
  z-index: 500;
  top: 0;
  right: 0;
  left: 0;
  display: flex
}
.top_title{
    font-size: 28rpx;
    color: #efefef;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    line-height: 100rpx;
    padding-left: 24rpx
}
.top_positionimg{
  width: 26rpx;
  height: 26rpx
}
.top_my_img{
  width: 34rpx;
  height: 34rpx;

}
.top_city{
  color: #999;
  font-size: 28rpx;
}
.top_position{
  display: flex;
  padding-left: 450rpx;
  align-items: center;
  justify-content: center;
}
.top_my{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 30rpx
}