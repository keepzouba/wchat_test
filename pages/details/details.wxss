.film_info{
  width: 100%;
  padding-top: 100rpx;
}
.film_logo{
  width: 100%;
  height: 421.88rpx;
  transition: all 1.2s ease;
  opacity: 1;
}
.film_introduction{
  margin: 32rpx 0;
  border-left: 32rpx solid RGB(228, 200, 156);
  font-size: 32rpx;
  padding-left: 8rpx;
}
.film_desc{
  width: 100%;
  padding-left: 40rpx;
  font-size: 24rpx;
  display: flex;
  margin-bottom: 20rpx;
  text-align-last: justify
}
.film_desc>view:nth-of-type(1){
  width: 121.68rpx;
}

